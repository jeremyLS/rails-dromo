<div class="main-container">
  <div id="map"
  style="width: 100%;
  height: calc(100vh - 70px);"
  data-markers="<%= @markers.to_json %>">
  </div>
  <div class="container">
    <h2><%= @itinerary.country %></h2>
    <% @itinerary.steps.each do |step| %>
      <div class="h-card-container"style="height: 255px;">
        <div class="horizontal-card">
          <div class="h-card-image" style="background-image: url('<%= cl_image_path step.photos.first.picture %>')">

          </div>
          <div class="h-card-content">
            <div class="content-header">
              <h5><%= step.title %></h5>
              <i class="<%= icon_by_category(step.category) %> category"></i>

            </div>
            <p><%= step.description %></p>
          </div>
          <div class="h-card-button">
            <button type="button" class="h-button" data-toggle="modal" data-target="#myModal">
              <p>Discover <i class="fas fa-arrow-right"></i></p>

            </button>
          </div>
        <i class="far fa-heart heart"></i>
        </div>
      </div>
    <% end %>
  </div>
</div>




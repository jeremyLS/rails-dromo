<div class="container-white">

    <h1>Itineraries in Argentina</h1>
    <h2 style="margin-bottom: 90px; color:#CDCDCD">Collect experiences and tips from real travelers !</h2>

  <%= form_tag itineraries_path, method: :get do %>
    <div class="search-module">
      <div class="search-bar-main-container">
        <%= text_field_tag :query,
          params[:query],
          class: "form-control search-bar-index search-content",
          placeholder: "Type a country"
        %>
        <%= button_tag type: "submit", id: "index-go", class:'button-dromo-index' do %>
          Search
        <% end %>
      </div>
    </div>
  <% end %>

<% @Itineraries.each do |itinenary| %>
    <div class="itineraries-container">
    <div class="row">
      <div class="col-xs-12 col-md-4">
        <div class="card-main-container">
          <div class="card-image">
          </div>
          <div class="card-btn">
            <%= link_to "#" do %>
              Discover <i class="fas fa-arrow-right"></i>
            <% end %>
          </div>
          <div class="card-info-right">
            <i class="fas fa-users"></i>
            <p>couple</p>
          </div>
          <div class="card-info">
            <i class="far fa-clock"></i>
            <p>yo</p>
          </div>
          <div class="card-content">
            <h3>Argentina</h3>
            <p>By jeremyls</p>
          </div>
        </div>
      </div>
    </div>
  </div>



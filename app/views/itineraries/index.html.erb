<div class="container-white">
  <%= render 'shared/navbar-home' %>
  <% if @itineraries.empty? %>
    <div class="index-header-content">
      <h3 style="margin-left: 15px; margin-bottom: 30px;" >No itineraries yet in this country, be the first to post one ðŸ˜€ </h3>

      <div class='cloud'></div>
      <div class="cloud_two"></div>

      <%= form_tag itineraries_path, method: :get do %>
        <div class="search-module">
          <div class="search-bar-main-container">
            <%= text_field_tag :query,
              params[:query],
              class: "form-control search-bar-index search-content",
              placeholder: "Type a country"
            %>
            <%= button_tag type: "submit", id: "index-go", class:'button-dromo-index' do %>
              Search
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="index-header-content">
      <h1 style="font-weight: bolder; margin-left: 15px"> Itineraries in <%= @itineraries.first.country.capitalize %></h1>
       <div class='cloud'></div>
      <h2 style="margin-bottom: 90px; color:#CDCDCD; margin-left: 15px">Collect experiences and tips from real travelers !</h2>

      <%= form_tag itineraries_path, method: :get do %>
        <div class="search-module">
          <div class="search-bar-main-container">
            <%= text_field_tag :query,
              params[:query],
              class: "form-control search-bar-index search-content",
              placeholder: "Type a country"
            %>
            <%= button_tag type: "submit", id: "index-go", class:'button-dromo-index' do %>
              Search
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="row" style="margin-top: 40px">
       <div class="cards " data-aos="fade-down">
          <% @itineraries.each do |itinerary| %>
            <div class="col-xs-12 col-md-4">
              <div class="card-main-container">
                <div class="card-image" style="background-image: url(<%= cl_image_path itinerary.steps.first.photos.first.picture %>)">

                  <div class="card-info-right">
                    <i class="<%= icon_by_crew(itinerary.crew) %> crew"></i>
                    <p><%= itinerary.crew %></p>
                  </div>
                  <div class="card-info">
                    <i class="far fa-clock"></i>
                    <p><%= get_duration(itinerary.duration_in_days) %></p>
                  </div>
                </div>

                <div class="card-btn">
                  <%= link_to itinerary_path(itinerary) do %>
                    Discover <i class="fas fa-arrow-right"></i>
                  <% end %>
                </div>

                <div class="card-content">
                  <h3><%= itinerary.country %></h3>
                  <h6><i class="fas fa-map-pin"></i> <%= itinerary.steps.count %> steps</h6>
                  <p>by <%= itinerary.owner.name %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>



